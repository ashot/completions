{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM"],
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noEmit": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "useUnknownInCatchVariables": false
  },
  "include": ["src"]
}
